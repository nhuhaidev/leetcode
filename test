<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JQ01</title>
    <style>
        #course-list {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div>
        <label for="course-name">Tên môn học:</label>
        <input type="text" id="course-name">
        <button id="add-course">Thêm môn học</button>
    </div>

    <ul id="course-list">
        <li>Python</li>
        <li>PHP</li>
    </ul>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Hàm thêm môn học
            function addCourse() {
                var courseName = $('#course-name').val().trim();
                if (courseName) {
                    $('#course-list').append('<li>' + courseName + '</li>');
                    $('#course-name').val('');
                }
            }

            // Sự kiện khi click nút "Thêm môn học"
            $('#add-course').click(function() {
                addCourse();
            });

            // Sự kiện khi nhấn phím Enter
            $('#course-name').keypress(function(event) {
                if (event.which == 13) { // 13 là mã phím Enter
                    addCourse();
                }
            });
        });
    </script>
</body>
</html>